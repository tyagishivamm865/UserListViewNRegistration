<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="edittText_bg">
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:drawablePadding">@dimen/std_padding</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">36dp</item>
        <item name="android:textColorHint">#8E8E8E</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="textView_bg">
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textviewstyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_bg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>
</resources>